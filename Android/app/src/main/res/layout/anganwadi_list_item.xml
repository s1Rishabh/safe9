<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardView:cardCornerRadius="8dp"
    cardView:cardElevation="8dp"
    cardView:contentPadding="16dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_user_image_anganwadi"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_account_circle_black_24dp" />

        <TextView
            android:id="@+id/tv_anganwadi_patient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/iv_user_image_anganwadi"
            android:textAppearance="@style/Base.Widget.AppCompat.ActionBar.Solid"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="Name of Patient" />

        <TextView
            android:id="@+id/tv_anganwadi_patient_weeks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_anganwadi_patient_name"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/iv_user_image_anganwadi"
            android:textSize="16sp"
            tools:text="8 weeks " />

    </RelativeLayout>
</android.support.v7.widget.CardView>
